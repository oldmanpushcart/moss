<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<fx:root type="AnchorPane"
         xmlns="http://javafx.com/javafx/17.0.12"
         xmlns:fx="http://javafx.com/fxml/1">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <WebView fx:id="contentWebView" VBox.vgrow="ALWAYS"/>
        <HBox fx:id="buttonBar" nodeOrientation="RIGHT_TO_LEFT" spacing="5.0">
            <ToggleButton fx:id="speakToggleButton" text="朗读"/>
            <Button fx:id="copyButton" text="复制"/>
            <Button fx:id="redoButton" text="重试"/>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
    </VBox>

</fx:root>
